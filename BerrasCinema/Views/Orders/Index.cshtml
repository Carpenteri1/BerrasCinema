@model IEnumerable<BerrasCinema.Models.Order>

@{
    ViewData["Title"] = "Order Tickets";
}


<div>
    <h1>Order Confirmed</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>OrderID:</p>
        </dt>
        <dd class="col-sm-10">
            @Model.LastOrDefault().BookingID
        </dd>
        <dt class="col-sm-2">
            <p>Ticket's:</p>
        </dt>
        <dd class="col-sm-10">
            @Model.LastOrDefault().amountOfTrickets
        </dd>
        <dt class="col-sm-2">
            <p>First Name:</p>
        </dt>
        <dd class="col-sm-10">
            @Model.LastOrDefault().CustomerFirstName
        </dd>
        <dt class="col-sm-2">
            <p>Last Name:</p>
        </dt>
        <dd class="col-sm-10">
            @Model.LastOrDefault().CustomerLastName
        </dd>
        <dt class="col-sm-2">
            <p>Email:</p>
        </dt>
        <dd class="col-sm-10">
            @Model.LastOrDefault().CustomerEmail
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LastOrDefault().BookingID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

