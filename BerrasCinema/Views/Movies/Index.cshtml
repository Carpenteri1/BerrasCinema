@model IEnumerable<BerrasCinema.Models.Movies>

@{
    ViewData["Title"] = "Available Movies";
    
}


<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            @if (item.SeatsLeft.Equals(0))
            {
                <tr style="color:red">
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieName)
                    </td>
                    <td class="Seats">
                        @Html.DisplayFor(modelItem => item.SeatsLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieDuration)
                    </td>
                </tr>
            }
            else
            {
                <tr style="color:black">
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieName)
                    </td>
                    <td class="Seats">
                        @Html.DisplayFor(modelItem => item.SeatsLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieDuration)
                    </td>
                </tr>
            }

        }
    </tbody>
</table>